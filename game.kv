#:kivy 1.10.0
#:import Button kivy.uix.button.Button
<ScreenManager>:
    BoardScreen:
        id: boardScreen
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'horizontal'
                size_hint: (1, 0.1)
                Label:
                    text: 'X: ' + str(boardScreen.x_wins)
                Button:
                    text: 'Nova Partida'
                    on_press: boardScreen.restart()
                    size_hint: None, 0.5
                    pos_hint: {'center_y':0.5}
                Button:
                    text: 'Random'
                    on_press: boardScreen.random()
                    size_hint: None, 0.5
                    pos_hint: {'center_y':0.5}
                Button:
                    text: 'Play AI'
                    on_press: boardScreen.playAI()
                    size_hint: None, 0.5
                    pos_hint: {'center_y':0.5}
                Label:
                    text: 'O: ' + str(boardScreen.o_wins)
            GridLayout:
                rows: 3
                cols: 3
                Button:
                    text: boardScreen.board[0]
                    font_size: 50
                    on_press: boardScreen.play(0)
                
                Button:
                    text: boardScreen.board[1]
                    font_size: 50
                    on_press: boardScreen.play(1)
                
                Button:
                    text: boardScreen.board[2]
                    font_size: 50
                    on_press: boardScreen.play(2)
                
                Button:
                    text: boardScreen.board[3]
                    font_size: 50
                    on_press: boardScreen.play(3)
                
                Button:
                    text: boardScreen.board[4]
                    font_size: 50
                    on_press: boardScreen.play(4)
                
                Button:
                    text: boardScreen.board[5]
                    font_size: 50
                    on_press: boardScreen.play(5)
                
                Button:
                    text: boardScreen.board[6]
                    font_size: 50
                    on_press: boardScreen.play(6)
                
                Button:
                    text: boardScreen.board[7]
                    font_size: 50
                    on_press: boardScreen.play(7)
                
                Button:
                    text: boardScreen.board[8]
                    font_size: 50
                    on_press: boardScreen.play(8)
                